{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "MERN stack boilerplate",
  "scripts": {
    "front-end": "npm start --prefix ./front-end",
    "back-end": "nodemon ./back-end/bin/www",
    "app": "concurrently \"npm run front-end\" \"npm run back-end\"",
    "setup": "npm install && cd ./back-end && npm install && cd ../front-end && npm install && cd .."
  },
  "author": "Guillaume Graciet",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.0.0",
    "connect-mongo": "^3.1.1",
    "cross-env": "^6.0.3",
    "express-session": "^1.17.0",
    "nodemon": "^1.19.3",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  }
}
